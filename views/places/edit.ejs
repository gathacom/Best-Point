<% layout('layouts/app') %>

<h1 class="text-center">Edit Place</h1>
  <div class="row" mb-5>
  <div class="col-7 mb-5 <%!place.images.length > 0 ? 'offset-3': ''%>">
  <form action="/places/<%= place._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="validated-form" novalidate>
      <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="place[title]" id="title" class="form-control" value="<%= place.title %>" required/>
          <div class="invalid-feedback">
            Please input the Title.
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" name="place[location]" id="location" class="form-control" value="<%= place.location %> " required/>
          <div class="invalid-feedback">
            Please input the Location.
          </div>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="text" name="place[price]" id="price" class="form-control" value="<%= place.price %>" required/>
          <div class="invalid-feedback">
            Please input the Price.
          </div>
        </div>
        <div class="mb-3">
          <label for="desciption" class="form-label">Description</label>
          <textarea type="text" name="place[description]" id="desciption" class="form-control" required><%= place.description  %></textarea>
          <div class="invalid-feedback">
            Please input the Description.
          </div>
          </div>
          <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Images</label>
          <input type="file" name="image" class="form-control" id="formFileMultiple" accept="image/*" multiple>
          <div class="invalid-feedback">
            Please input the Image url.
          </div>
          </div>
    <button type="submit" class="btn btn-warning w-25 ">Edit</button>
  </form>


  </div>
  <% if (place.images.length > 0) { %>
  <div class="col-5">
    <h5 class="text-center">Delete Image</h5>
    <div class="form-group form-check ">
      <input type="checkbox" class="form-check-input" id="checkAll">
      <label for="checkAll" class="form-check-label">CheckAll</label>
    </div>
    <form action="/places/<%= place._id %>/images?_method=DELETE" method="POST" class="d-flex flex-wrap gap-2">
      <% place.images.forEach((image, index) => {%>
        <div class="col-md-5">
          <div class="card mb-3">
            <img src="/images/<%= image.filename %>" class="card-img-top" alt="">
            <div class="card-body">
              <div class="custom-checkbox">
                <input type="checkbox" name="images[]" value="<%= image.url %>" id="">
                <span class="form-check-text">Pilih</span>

              </div>
            </div>
          </div>
        </div>  
      <% }) %>
      <div class="w-100"></div>
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
  <% } %>
</div>

<script>
  document.getElementById('checkAll').addEventListener('change', function(){
    const checkboxes = document.getElementsByName('images[]');
    for(let i = 0; i < checkboxes.length; i++){
      checkboxes[i].checked = this.checked;
    }
  })
</script>