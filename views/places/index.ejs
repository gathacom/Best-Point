<% layout('layouts/app') %>

<h1>All Places</h1>
<a href="/places/create" class="btn btn-warning text-dark">Add Place</a>
<div class="container mt-3">
    <ul>
    <div class="row">
      <% for(const place of places){ %>
      <div class="col-4">
        <div class="card mb-2" style="width: 22rem; height : 21rem;">
          <img src="<%= place.image %>" class="card-img-top" alt="..."style="width: 100%; height : 50%;"/>
          <div class="card-body">
            <h5 class="card-title"><%= place.title %></h5>
            <p class="card-text"><%= place.location %></p>
            <a href="/places/<%= place._id %>" class="btn btn-primary position-absolute  bottom-0 mb-3">Detail</a>
          </div>
        </div>
      </div>

      <% } %>
    </div>
</ul>
</div>
